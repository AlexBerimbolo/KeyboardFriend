# focus workspace
#Asus
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
#HP
bindsym $mod+4 workspace 7
bindsym $mod+5 workspace 8
bindsym $mod+6 workspace 9
#Acer
bindsym $mod+7 workspace 4
bindsym $mod+8 workspace 5
bindsym $mod+9 workspace 6

# Move current container to workspace
#Asus
bindsym $mod+Shift+a move container to workspace number $ws1
bindsym $mod+Shift+s move container to workspace number $ws2
bindsym $mod+Shift+d move container to workspace number $ws3
#HP
bindsym $mod+Shift+z move container to workspace number $ws4
bindsym $mod+Shift+x move container to workspace number $ws5
bindsym $mod+Shift+c move container to workspace number $ws6
#Acer
bindsym $mod+Shift+q move container to workspace number $ws7
bindsym $mod+Shift+w move container to workspace number $ws8
bindsym $mod+Shift+e move container to workspace number $ws9

