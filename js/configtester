bindsym $sup+control+g exec --no-startup-id /usr/bin/chromium --app='https:/gitter.im'
bindsym $sup+g exec --no-startup-id /usr/bin/chromium --app='https://google.com'
bindsym $sup+shift+c exec --no-startup-id /usr/bin/chromium
bindsym $sup+r exec --no-startup-id /usr/bin/chromium --app='https://reddit.com'
bindsym $sup+d exec --no-startup-id /usr/bin/chromium --app='https://discord.com/channels/@me'
bindsym $sup+u exec --no-startup-id /usr/bin/chromium --app='https://Udemy.com'
